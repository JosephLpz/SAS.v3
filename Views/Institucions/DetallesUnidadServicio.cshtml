@model SAS.v1.Models.CampoClinico

@{
    ViewBag.Title = "Detalles Unidad de Servicio";
}



<div>
    <h3>Detalles Unidad de Servicio</h3>
    

    <div class="ContornoDetalles">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.NombreCampoClinico.NombreCampo)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NombreCampoClinico.NombreCampo)
            </dd>
        </dl>
    </div>
</div>
<br /> 
<br />
<table class="table" id="tablaDetalleCampos">
    <thead>
        <tr>

            <th>
                Rut
            </th>
            <th>
                Nombre
            </th>
            <th>
                ApPaterno
            </th>
            <th>
                ApMaterno
            </th>
            <th>
                Carrera
            </th>
            <th>
                Institución
            </th>
            <th>
                Campo Clinico
            </th>
            @*<th>
                    Unidad de Servicio
                </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CampoClinicoAlumno)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Alumno.Persona.Rut)-@Html.DisplayFor(modelItem => item.Alumno.Persona.Dv)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Alumno.Persona.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Alumno.Persona.ApPaterno)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Alumno.Persona.ApMaterno)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Alumno.CentroFormador.Carrera.NombreCarrera)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CampoClinico.Institucion.NombreInstitucion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CampoClinico.NombreCampoClinico.NombreCampo)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.UnidadDeServicio.NombreUnidadDeServicio.NombreUnidadDeServicio1)
                    </td>*@
                <td>

                    @Html.ActionLink("Detalles", "Details", "Alumnos", new { id = item.Id }, null)

                </td>
            </tr>
        }
    </tbody>
</table>

<p>

    @Html.ActionLink("Volver", "Index")
</p>
