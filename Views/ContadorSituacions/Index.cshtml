@model IEnumerable<SAS.v1.Models.ContadorSituacion>

@{
    ViewBag.Title = "Situacion Alumno";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table" id="TablaSituacionAlumno">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Vigente)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RetiroTemporal)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RetiroDefinitivo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EliminadoAcademica)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RetractoMatricula)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EiminadoNoMatricula)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Abandono)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Anio.Ano)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Vigente)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RetiroTemporal)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RetiroDefinitivo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EliminadoAcademica)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RetractoMatricula)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EiminadoNoMatricula)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Abandono)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Anio.Ano)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <script>
    $(document).ready(function () {

        $('#tablaAlumnos').DataTable(
         {
            "bFilter": false,

            "oLanguage": {
                "sLengthMenu": "Mostrar _MENU_ registros por página",
                "sZeroRecords": "No se encontraron resultados.",
                "sInfo": "Mostrando _START_ al _END_ de _TOTAL_ registros",
                "sInfoEmpty": "Mostrando 0 al 0 de 0 registros",
                "sInfoFiltered": "(filtrado(s) de _MAX_ registro(s))",
                "oPaginate": {
                    "sFirst": "Inicio",
                    "sLast": "Final",
                    "sNext": "Siguiente",
                    "sPrevious": "Anterior"
                }
            },
            "sDom": '<"top"Blip>rt<p"clear">',
            buttons: ['excel']
         });
    });
    </script>
</body>

</html>
