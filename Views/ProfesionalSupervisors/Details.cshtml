@model SAS.v1.Models.ProfesionalSupervisor

@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>
    <h3>Detalle Profesional Supervisor</h3>
    <div >
        <div class="ContornoDetalles">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Persona.Rut)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Persona.Rut)-@Html.DisplayFor(model => model.Persona.Dv)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Persona.Nombre)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Persona.Nombre)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Persona.ApPaterno)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Persona.ApPaterno)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Persona.ApMaterno)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Persona.ApMaterno)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.ValorSupervisor)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ValorSupervisor)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Observaciones)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Observaciones)
                </dd>
            </dl>
        </div>
        <br />
        <table class="table" id="tablaDetalleSupervisor">
            <thead>
                <tr>
                    <th>Rut</th>
                    <th>Nombre</th>
                    <th>Apellido Paterno</th>
                    <th>Apellido Materno</th>
                    <th>Carrera</th>
                    <th>Institución</th>
                    @*<th>Unidad de Servicio</th>*@
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.CampoClinicoAlumno)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Alumno.Persona.Rut)-@Html.DisplayFor(modelItem => item.Alumno.Persona.Dv)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Alumno.Persona.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Alumno.Persona.ApPaterno)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Alumno.Persona.ApMaterno)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Alumno.CentroFormador.Carrera.NombreCarrera)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CampoClinico.Institucion.NombreInstitucion)
                        </td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.UnidadDeServicio.NombreUnidadDeServicio.NombreUnidadDeServicio1)
                        </td>*@
                        <td>@Html.ActionLink("Detalles", "Details", "Alumnos", new { id = item.Id }, null)</td>
                       
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <p>
        @*@Html.ActionLink("Edit", "Edit", new { id = Model.ProfesionalSupervisorId }) |*@
        @Html.ActionLink("Volver", "Index")
    </p>

    <script>
    $(document).ready(function () {

        $('#tablaDetalleSupervisor').DataTable(
         {
            "bFilter": false,

            "oLanguage": {
                "sLengthMenu": "Mostrar _MENU_ registros por página",
                "sZeroRecords": "No se encontraron resultados.",
                "sInfo": "Mostrando _START_ al _END_ de _TOTAL_ registros",
                "sInfoEmpty": "Mostrando 0 al 0 de 0 registros",
                "sInfoFiltered": "(filtrado(s) de _MAX_ registro(s))",
                "oPaginate": {
                    "sFirst": "Inicio",
                    "sLast": "Final",
                    "sNext": "Siguiente",
                    "sPrevious": "Anterior"
                }
            },
            "sDom": '<"top"Blip>rt<p"clear">',
            buttons: ['excel']
         });
    });
    </script>

    <script src="~/Scripts/DataTables/dataTables.buttons.min.js"></script>
    <script src="~/Scripts/jszip.min.js "></script>
    <script src="~/Scripts/DataTables/buttons.html5.min.js"></script>
</body>
</html>
