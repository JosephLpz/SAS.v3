@model IEnumerable<SAS.v1.Models.AsignaturaAlumno>

@{
    ViewBag.Title = "Asignaturas Alumnos";
}

<!DOCTYPE html>

<div>
    <ul class="breadcrumb">
        <li>@Html.ActionLink("AsignaturaAlumnos", "Index", "AsignaturaAlumnos")</li>
        <li>@Html.ActionLink("AsignaturaAlumnos", "Index")</li>
        <li class="active">@ViewBag.Title</li>
        <li class="opcion">@Html.ActionLink("Volver", "Index")</li>
    </ul>
</div>

<h1>Asignaturas Alumnos</h1>
<br />
<form class="form-inline" method="POST">
    <div class="form-group"><input type="text" class="form-control" id="Filtro" placeholder="Ingrese Filtro" name="Filtro"></div>
    <button type="submit" class="btn btn-primary">Buscar</button>
</form>
    <table class="table" id="TablaAsignaturasAlumnos">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Alumno.Persona.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Alumno.Persona.ApPaterno)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Asignatura.NombreAsignatura)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EstadoAsignatura)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AsignaturaPreRequisito)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Anio.Ano)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Semestre.NombreSemestre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PorcentajeDeExigencia.Porcentaje)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Carrera.NombreCarrera)
                </th>
                <th></th>
                <th></th>
                @*<th></th>*@
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Alumno.Persona.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Alumno.Persona.ApPaterno)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Asignatura.NombreAsignatura)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EstadoAsignatura)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AsignaturaPreRequisito)
                    </td>


                    <td>
                        @Html.DisplayFor(modelItem => item.Anio.Ano)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Semestre.NombreSemestre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PorcentajeDeExigencia.Porcentaje)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Carrera.NombreCarrera)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id })

                    </td>
                    <td>
                        @Html.ActionLink("Details", "Details", new { id = item.Id })
                    </td>
                    @*<td>
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>*@
                </tr>
            }
        </tbody>
</table>
    
