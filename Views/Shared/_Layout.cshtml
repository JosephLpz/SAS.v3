@using System.Web.Optimization



<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Sistema de Gestión para Campos Clínicos</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/UVM_Styles")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/CustomJqueryBundle", "~/bundles/CustomJqueryDataTable_Scripts")
    @Styles.Render("~/bundles/CustomJqueryDataTable_Styles")
    @*<script src="~/Scripts/modernizr-2.6.2.js"></script>*@
    
</head>
<body>
    <div id="NavBar-Principal" class="navbar navbar-default navbar-fixed-top">
        <div class="container">

            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                
                <ul class="nav navbar-nav">
              
                    <li><a class="navbar-brand">@Html.ActionLink("Sistema Gestión Campos Clínicos", "Index", "Inicio")</a></li>
                    @if (User.Identity.IsAuthenticated)
                    {
                    <li class="dropdown">
                   
                        <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                            Mantenedores<span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item">@Html.ActionLink("Alumnos", "Create", "Alumnos")</a></li>
                            <li><a class="dropdown-item">@Html.ActionLink("Profesional Guia", "Create", "ProfesionalDocenteGuias")</a></li>
                            <li><a class="dropdown-item">@Html.ActionLink("Profesional Supervisor", "Create", "ProfesionalSupervisors")</a></li>
                            <li><a class="dropdown-item">@Html.ActionLink("Instituciones", "Create", "Institucions")</a></li>
                                                   
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a  class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                        Consultas<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu" aria-labelledby="navbarDropdown">
                           <li><a class="dropdown-item">@Html.ActionLink("Alumnos", "Index", "Alumnos",new { id = 0 },null)</a></li> 
                            <li><a class="dropdown-item">@Html.ActionLink("Profesional Docente", "Index", "ProfesionalDocenteGuias")</a></li>
                            <li><a class="dropdown-item">@Html.ActionLink("Instituciones", "Index", "Institucions")</a></li>
                            <li><a class="dropdown-item">@Html.ActionLink("Profesional Supervisor", "Index", "ProfesionalSupervisors")</a></li>
                            <li><a class="dropdown-item">@Html.ActionLink("Campos Clinicos", "Index", "CampoClinicoAlumnos")</a></li>
                            <li><a class="dropdown-item">@Html.ActionLink("Plan de Estudios", "Index", "PlanDeEstudios", new { id = 1 }, null)</a></li>    
                            <li><a class="dropdown-item">@Html.ActionLink("Seguimiento Alumnos", "Index", "Alumnos", new { id = 1 },null)</a></li>    
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                            Carga de Datos<span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item">@Html.ActionLink("Cargar Nomina Docente/Alumno", "IngresoArchivo", "CargaExcel")</a></li>
                            <li><a class="dropdown-item">@Html.ActionLink("Cargar Seguimiento Alumno", "Index", "CargarAsignaturas")</a></li>
                            <li><a class="dropdown-item">@Html.ActionLink("Cargar Plan de Estudios", "Index", "CargarPlanEstudios")</a></li>
                        </ul>
                    </li>
                        if (User.IsInRole("Administrador"))
                        {
                    <li class="dropdown">
                 
                        <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                            Usuarios<span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu" aria-labelledby="navbarDropdown">

                            <li><a class="dropdown-item">@Html.ActionLink("Usuarios", "Index", "Usuarios")</a></li>
                            <li><a class="dropdown-item">@Html.ActionLink("Crear Usuarios", "Create", "Usuarios")</a></li>        
                            

                                       
                        </ul>
                    </li>
                       }
                   }                 
                </ul>
               
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="container-fluid bg-rojo">
            <p>&copy; @DateTime.Now.Year - Universidad Viña del Mar</p>
        </footer>
    </div>

            @*<script src="~/Scripts/jquery-1.10.2.min.js"></script>*@
    @*<script src="~/Scripts/bootstrap.min.js"></script>*@
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>