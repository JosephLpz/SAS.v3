@model IEnumerable<SAS.v1.Models.Usuario>

@{
    ViewBag.Title = "Usuarios";
}

<!DOCTYPE html>

<html>

<body>
    <p>
        @Html.ActionLink("Crear Nuevo", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cuenta)
            </th>          
            <th>
                @Html.DisplayNameFor(model => model.Correo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Persona.Rut)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PerfilUsuario.Perfil)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cuenta)
            </td>         
            <td>
                @Html.DisplayFor(modelItem => item.Correo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Persona.Rut)-@Html.DisplayFor(modelItem => item.Persona.Dv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PerfilUsuario.Perfil)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
